# Production environment variables
# Copy to .env and fill in real values before deploying

# Server
ENV=production

# Database
DB_HOST=db
DB_PORT=5432
DB_USER=ensoul
DB_PASSWORD=change_me_to_a_strong_password
DB_NAME=ensoul
DB_SSLMODE=disable

# BNB Smart Chain
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Platform wallet (for minting Souls on-chain)
PLATFORM_PRIVATE_KEY=

# AES encryption key for Claw private keys (any random string)
CLAW_PK_SECRET=change_me_32_char_hex_string_ok

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=sk-...
LLM_MODEL=gpt-4o
# Optional: custom base URL for DeepSeek, OpenRouter, etc.
LLM_BASE_URL=

# Twitter API (optional, falls back to mock data)
TWITTER_BEARER_TOKEN=

# Frontend API URL (used at build time)
NEXT_PUBLIC_API_URL=https://api.ensoul.ac
